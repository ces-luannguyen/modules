<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.2.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_2_0.dtd">

<service-builder dependency-injector="ds" package-path="com.liferay.training.monitor">
	<namespace>Monitor</namespace>
	<!--<entity data-source="sampleDataSource" local-service="true" name="Foo" remote-service="false" session-factory="sampleSessionFactory" table="foo" tx-manager="sampleTransactionManager uuid="true"">-->
	<entity local-service="true" name="Event" remote-service="true" uuid="true">

		<!-- PK fields -->

		<column name="eventId" primary="true" type="long"></column>


		<!-- Audit fields -->

		<column name="companyId" type="long"></column>
		<column name="groupId" type="long"></column>
		<column name="userName" type="String"></column>
		<column name="userId" type="long"></column>
		<column name="eventDate" type="Date"></column>
		<column name="eventType" type="String"></column>
		<column name="ipAddress" type="String"></column>
		<column name="createDate" type="Date"></column>
         <column name="modifiedDate" type="Date"></column>
		
		<!-- Order -->

         <order by="asc">
             <order-column name="eventDate" />
         </order>

         <!-- Finders -->

         <!-- Find by companyId -->

         <finder name="CompanyId" return-type="Collection">
             <finder-column name="companyId"></finder-column>
         </finder>
         <!-- Find by eventType -->
         <finder name="EventType" return-type="Collection">
             <finder-column name="eventType"></finder-column>
         </finder>
         <!-- Find by groupId -->
         <finder name="GroupId" return-type="Collection">
             <finder-column name="groupId"></finder-column>
         </finder>
         <!-- Find by userId -->
         <finder name="UserId" return-type="Collection">
             <finder-column name="userId"></finder-column>
         </finder>
         <!-- Find by userId and eventType -->
         <finder name="UserIdAndEventType" return-type="Collection">
			<finder-column name="userId"></finder-column>
			<finder-column name="eventType"></finder-column>
		</finder>
         
	</entity>

	<!-- Exceptions -->

	<exceptions>
		<exception>EventValidation</exception>
	</exceptions>
</service-builder>